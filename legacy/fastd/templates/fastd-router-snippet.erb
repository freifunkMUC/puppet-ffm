config peer 'mesh_vpn_backbone_peer_vpn_<%= @fqdn.gsub(/-+/, "") %>'
        option enabled '1'
        option key '<%= scope['::fastd::public_key'] %>'
        option net 'mesh_vpn'
        list remote 'ipv4 "<%= scope['::fastd::connection_ip'] %>" port <%= scope['::fastd::port'] %>'
        option group 'mesh_vpn_backbone'
