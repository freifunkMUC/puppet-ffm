# this file is managed by puppet

ddns-update-style none;

default-lease-time <%= scope['::iscdhcpd::default_lease_time'] %>;
max-lease-time <%= scope['::iscdhcpd::max_lease_time'] %>;

log-facility local7;

subnet <%= scope['::iscdhcpd::subnet'] %> netmask <%= scope['::iscdhcpd::netmask'] %> {
  authoritative;
  range <%= scope['::iscdhcpd::range_start'] %> <%= scope['::iscdhcpd::range_end'] %>;
  option domain-name-servers <%= scope['::iscdhcpd::dns_servers'].join(', ') %>;
  option routers <%= scope['::iscdhcpd::routers'].join(', ') %>;
  interface <%= scope['::iscdhcpd::interface'] %>;
}
