# this file is managed by puppet
client
remote se.mullvad.net 1194

dev-type tun
dev <%= @vpn_interface %>

proto udp

resolv-retry infinite
persist-key
persist-tun
nobind
route-noexec

ping 10
ping-restart 60

script-security 2
remote-cert-tls server
verb 4
comp-lzo

ca /etc/openvpn/mullvad/ca.crt
cert /etc/openvpn/mullvad/mullvad.crt
key /etc/openvpn/mullvad/mullvad.key
crl-verify /etc/openvpn/mullvad/crl.pem

up /etc/openvpn/mullvad/mullvad-up
down /etc/openvpn/mullvad/mullvad-down

